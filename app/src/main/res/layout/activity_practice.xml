<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PracticeActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:includeFontPadding="false"
        android:text="Welcome!"
        android:textSize="@dimen/_26sdp"
        android:textColor="@color/black"
        ></TextView>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:text="Please provide following \ndetails for your new account"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/darkgrey"
        ></TextView>
    //Image View
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:background="@drawable/dp"></ImageView>

    <EditText
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Full Name"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/edittextborder"

></EditText>
    <EditText
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/email"
        android:hint="Enter Email Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/edittextborder"

        ></EditText>
    <EditText
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Enter Email Address"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/edittextborder"

        ></EditText>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
            <CheckBox
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/textView_Item_Listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="3dp"
            android:text="By creating your account you have to agree with our Terms and Conditions."
            android:textSize="15sp" />
    </LinearLayout>

    <Button android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="Sign Up My Account"
        android:layout_marginBottom="25dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/purple_500"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            >

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_10sdp"
                android:padding="3dp"
                android:text="Already have an Account?"
                android:textSize="15sp" />

        </LinearLayout>
        <TextView
            android:layout_margin="@dimen/_10sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="- Sign In"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
</ScrollView>



</LinearLayout>